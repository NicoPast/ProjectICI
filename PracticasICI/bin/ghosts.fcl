END_FUZZIFY

FUZZIFY BLINKYedible			// Fuzzify input variable 'service': {'poor', 'good' , 'excellent'}
	TERM low := (0,0)(100, 0.25); 
	TERM high := (25, 0)(100, 1);
END_FUZZIFY
FUZZIFY INKYedible			// Fuzzify input variable 'service': {'poor', 'good' , 'excellent'}
	TERM low := (0,0)(100, 0.25) ; 
